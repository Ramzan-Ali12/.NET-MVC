
@model List<CRUD.Models.Simple>
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Create" asp-controller="Simple" class="btn btn-sm btn-outline-success">Create</a>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            @* <td>ID</td> *@
                            <td>Name</td>
                            <td>Age</td>
                            <td>Gender</td>
                            <td>Manage</td>
                        </tr>
                    </thead>
<tbody>
    @foreach (var item in Model)
    {
      
        <tr>
            @* <td>@item.Id</td> *@
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>@item.Gender</td>
            <td>
                <a asp-action="Edit" asp-controller="Simple" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                <a asp-action="Delete" asp-controller="Simple" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>

            </td>
        </tr>
    }
</tbody>
                </table>

            </div>
        </div>
    </div>