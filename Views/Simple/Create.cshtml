<div class="form-group"> 
     <label>Name</label>
     <input asp-for="Name" type="text" class="form-control form-control-sm required" placeholder="Enter Person Name" tabindex="2">
</div>
<div class="form-group"> 
     <label>Age</label>
     <input asp-for="Age" type="text" class="form-control form-control-sm required" placeholder="Enter Person Age" tabindex="3">
</div>
