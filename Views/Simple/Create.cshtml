@model CRUD.Models.Simple
<form asp-action="Create" asp-area="Simple" method="post" class="custom-centered">
<div class="row">
<div class="col-lg-12">
@* <div class="form-group"> 
     <label>Id</label>
     <input asp-for="Id" type="int" class="form-control form-control-sm required" placeholder="Enter Person Id" tabindex="1">
